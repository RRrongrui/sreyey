<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/selector_head"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout">
            <!-- 左边图标 -->
            <Button
                android:id="@+id/bu_user_data_finsh"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/img_left" />
        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="昵称"
            android:textColor="#ffffff"
            android:textSize="19sp" />
        <Button
            android:id="@+id/tv_title_caly"
            android:layout_width="38dp"
            android:layout_height="21dp"
            android:text="完成"
            android:textColor="#ffffff"
            android:background="#00000000"
            android:textSize="19sp"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout" ></RelativeLayout>


    <EditText
        android:id="@+id/et_nicheng"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@null"
        android:hint="点击我填写昵称哦~"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="15dp"
        android:background="#dddddd"
        />


</RelativeLayout>