<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_login_bc"
    android:orientation="vertical" >

    <!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/login_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_weight="3"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/find_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#ffffff"
            android:text="登录"/>
        <TextView
            android:id="@+id/login_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="3"
            android:textColor="#ffffff"
            android:text="注册"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="42dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#43eeeeee">
        <!--头像显示-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/login_person"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="28dp"
    android:orientation="vertical" >
    <!--输入账号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/register_butten2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@mipmap/register_phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="+86"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#ffffff"
                />
        <EditText
            android:id="@+id/id_frag_regis_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textColorHint="#eeeeee"
            android:hint="请输入手机号码"/>
        </LinearLayout>

    <!--输入密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/register_butten2">
    <EditText
        android:id="@+id/id_frag_regis_pwd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/register_password"
        android:layout_marginLeft="19dp"
        android:drawablePadding="10dp"
        android:background="#00000000"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textColorHint="#eeeeee"
        android:hint="请输入密码"
        android:inputType="textPassword"/>
    </LinearLayout>
    <!--跳转登录-->
    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:background="@mipmap/login_login_rg"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:text="登录"/>
    <!--忘记密码-->
    <TextView
        android:id="@+id/login_reset"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_gravity="center_horizontal"
    android:textSize="12sp"
    android:textColor="#ffffff"
    android:text="忘记密码,点击重置"/>
</LinearLayout>
    </LinearLayout>
</LinearLayout>