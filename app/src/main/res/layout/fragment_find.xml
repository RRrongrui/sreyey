<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_head"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/baidu_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:maxEms="3"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/location"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#ffffff"
            android:text="发现"/>
        <TextView
            android:id="@+id/login_ceshi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <spfworld.spfworld.carousel.view.Banner
        android:id="@+id/main_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:banner_change_duration="0"
        app:banner_pause_duration="2000"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/wether_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/wether_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/wether_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/find_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="79dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/find_float"/>
        <spfworld.spfworld.custom.WaterWaveView
            android:id="@+id/waveview_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"/>
        <spfworld.spfworld.custom.WaterWaveView
            android:id="@+id/waveview_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/fish_one"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/fish_one"/>
        <ImageView
            android:id="@+id/fish_two"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/fish_one"/>
        <ImageView
            android:id="@+id/fish_th"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/fish_two"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingTop="14dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="47dp"
        android:background="#eeeeee"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/find_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="3.5dp"
            android:layout_weight="1"
            android:src="@mipmap/find_event"/>
        <ImageView
            android:id="@+id/find_pond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="3.5dp"
            android:layout_weight="1"
            android:src="@mipmap/find_pond"/>

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gif_view_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:background="#a0ffffff">
        <com.ant.liao.GifView
            android:id="@+id/gifView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
